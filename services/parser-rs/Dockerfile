FROM rust:1.71-bookworm as builder
WORKDIR /app

# Cache dependencies
COPY Cargo.toml .
COPY Cargo.lock .
RUN mkdir src && echo "fn main() {}" > src/main.rs
RUN cargo build --release || true

# Copy source and build
COPY . .
RUN cargo build --release

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/parser_rs /usr/local/bin/parser_rs

EXPOSE 52051 50051
VOLUME ["/app/data"]
HEALTHCHECK --interval=10s --timeout=5s --retries=3 CMD nc -z localhost 50051 || exit 1

CMD ["/usr/local/bin/parser_rs"]
